USERS
Column Name 	Data Type 	Constraints 	Description
USERS	user_id	NUMBER (PK)	PRIMARY KEY, GENERATED BY DEFAULT AS IDENTITY	Unique identifier for each user
full_name	VARCHAR2(100)	NOT NULL	Full name of the user
phone_number	VARCHAR2(20)	UNIQUE, NOT NULL	User's mobile phone number
account_status	VARCHAR2(20)	DEFAULT 'ACTIVE'	Status of the user account (ACTIVE, BLOCKED, SUSPENDED)


ACCOUNTS	account_id	NUMBER (PK)	PRIMARY KEY, GENERATED BY DEFAULT AS IDENTITY	Unique identifier for each account
	user_id	NUMBER (FK)	FOREIGN KEY REFERENCES USERS(user_id)	Owner of the account
	balance	NUMBER(12,2)	DEFAULT 0, NOT NULL	Current balance of the account
	account_type	VARCHAR2(20)	DEFAULT 'PERSONAL'	Type of account (PERSONAL, BUSINESS)
	created_at	DATE	DEFAULT SYSDATE	Account creation timestamp

TRANSACTIONS	txn_id	NUMBER (PK)	PRIMARY KEY, GENERATED BY DEFAULT AS IDENTITY	Unique transaction identifier
	account_id	NUMBER (FK)	FOREIGN KEY REFERENCES ACCOUNTS(account_id)	Account sending money
	amount	NUMBER(12,2)	NOT NULL	Transaction amount
	txn_type	VARCHAR2(20)	NOT NULL	Transaction type (DEBIT, CREDIT)
	destination_number	VARCHAR2(20)	NOT NULL	Recipient account/phone number
	txn_time	DATE	DEFAULT SYSDATE	Timestamp of the transaction

FRAUD_DETECTION	fraud_id	NUMBER (PK)	PRIMARY KEY, GENERATED BY DEFAULT AS IDENTITY	Unique identifier for each fraud record
	txn_id	NUMBER (FK)	FOREIGN KEY REFERENCES TRANSACTIONS(txn_id)	Transaction flagged as suspicious
	risk_score	NUMBER(3,1)	NOT NULL	Calculated fraud risk score (0â€“100)
	risk_level	VARCHAR2(20)	NOT NULL	Risk level based on score (LOW, MEDIUM, HIGH)
	detected_at	DATE	DEFAULT SYSDATE	Timestamp when fraud was detected

ALERT	alert_id	NUMBER (PK)	PRIMARY KEY, GENERATED BY DEFAULT AS IDENTITY	Unique identifier for each alert
	user_id	NUMBER (FK)	FOREIGN KEY REFERENCES USERS(user_id)	User to whom alert is sent
	txn_id	NUMBER (FK)	FOREIGN KEY REFERENCES TRANSACTIONS(txn_id)	Related transaction
	alert_message	VARCHAR2(255)	NOT NULL	Description of alert
	alert_time	DATE	DEFAULT SYSDATE	Timestamp when alert was generated

Security_LOG	audit_id	NUMBER (PK)	PRIMARY KEY, GENERATED BY DEFAULT AS IDENTITY	Unique identifier for audit record
	user_id	NUMBER (FK)	FOREIGN KEY REFERENCES USERS(user_id)	User performing the action
	action_type	VARCHAR2(50)	NOT NULL	Type of action (INSERT, UPDATE, DELETE, BLOCKED_TRANSACTION)
	table_name	VARCHAR2(50)	NOT NULL	Table affected by the action
	action_time	DATE	DEFAULT SYSDATE	Timestamp when action occurred
	description	VARCHAR2(255)	NULL	Optional detailed description of the action
